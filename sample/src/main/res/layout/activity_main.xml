<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".MainActivity"
	>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="10dp"
		>

		<Button
			android:id="@+id/buttonEasyUse"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="20dp"
			android:text="最简单调用方式"
			/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="自定义多种配置："
			android:textSize="18sp"
			/>

		<Button
			android:id="@+id/buttonThumb"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="仅普清"
			/>

		<Button
			android:id="@+id/buttonOrigin"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="仅原图"
			/>

		<Button
			android:id="@+id/buttonDefault"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="默认普清，手动原图"
			/>

		<Button
			android:id="@+id/buttonAuto"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="网络自适应（WiFi原图，流量普清）"
			/>

		<Button
			android:id="@+id/buttonClean"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:text="清除图片磁盘缓存"
			/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:text="自定义各种开关："
			android:textSize="18sp"
			/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="开启或关闭点击图片关闭功能"
				/>
			<android.support.v7.widget.SwitchCompat
				android:id="@+id/switchClickClose"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				/>
		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="开启或关闭下拉关闭功能"
				/>
			<android.support.v7.widget.SwitchCompat
				android:id="@+id/switchDragClose"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				/>
		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="是否显示顶部指示器"
				/>
			<android.support.v7.widget.SwitchCompat
				android:id="@+id/switchShowIndicator"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				/>
		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="是否显示底部左侧关闭按钮"
				/>
			<android.support.v7.widget.SwitchCompat
				android:id="@+id/switchShowCloseButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				/>
		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="是否显示底部右侧下载按钮"
				/>
			<android.support.v7.widget.SwitchCompat
				android:id="@+id/switchShowDownButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				/>
		</RelativeLayout>
	</LinearLayout>
</ScrollView>